<?xml version="1.0"?>
<robot name="pybullet_reacher_robot">

<!-- link0 : base cylinder -->
<link name="link0">
  <visual>
    <origin xyz="0 0 .025" rpy="0 0 0" />
    <geometry>
      <cylinder length="0.05" radius="0.03"/>
    </geometry>
    <material name="yellow">
      <color rgba=".8 .8 .0 1"/>
    </material>
  </visual>

 <collision>
    <origin xyz="0 0 .025" rpy="0 0 0" />
    <geometry>
      <cylinder length="0.05" radius="0.03"/>
    </geometry>
  </collision>
  <inertial>
    <origin xyz="0 0 .025" rpy="0 0 0" />
    <mass value="1"/>
    <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
  </inertial>
</link>


<!-- joint between 0 and 1 -->
<joint name="joint1" type="revolute">
  <parent link="link0"/>
  <child link="link1"/>
  <origin xyz="0 0 .025" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit effort="600" lower="-62.831853" upper="62.831853" velocity="400"/>
</joint>


<!-- link1 : Pan1 -->
<link name="link1">
  <visual>
    <origin xyz=".1 0 0" rpy="0 1.570796 0" />
    <geometry>
      <cylinder length="0.2" radius="0.015"/>
    </geometry>
    <material name="blue">
      <color rgba=".0 .0 .8 1"/>
    </material>
  </visual>

 <collision>
    <origin xyz=".1 0 0" rpy="0 1.570796 0" />
    <geometry>
      <cylinder length="0.2" radius="0.015"/>
    </geometry>
  </collision> 
  <inertial>
    <origin xyz=".1 0 0" rpy="0 1.570796 0" />
    <mass value="1"/>
    <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
  </inertial>	
</link>


<!-- joint between 1 and 2 -->
<joint name="joint2" type="revolute">
  <parent link="link1"/>
  <child link="link2"/>
  <origin xyz="0.2 0 0" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit effort="300" lower="-2.96705" upper="2.96705" velocity="200"/>
</joint> 


<!-- link3 : pan2 -->
<link name="link2">
  <visual>
    <origin xyz="0.1 0 0" rpy="0 1.570796 0" />
    <geometry>
      <cylinder length="0.2" radius="0.015"/>
    </geometry>
    <material name="sky">
      <color rgba="0 .8 .8 1"/>
    </material>
  </visual>

 <collision>
    <origin xyz="0.1 0 0" rpy="0 0 0" />
    <geometry>
      <cylinder length="0.2" radius="0.015"/>
    </geometry>
  </collision> 
  <inertial>
    <origin xyz="0.1 0 0" rpy="0 0 0" />
    <mass value="1"/>
    <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
  </inertial>	
</link> 


<!-- joint between 2 and 3 -->
<joint name="joint3" type="revolute">
  <parent link="link2"/>
  <child link="link3"/>
  <origin xyz="0.2 0 0" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit effort="3000" lower="-3.14159" upper="3.14159" velocity="200"/>
</joint> 


<!-- link3 : end-effector -->
<link name="link3">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <geometry>
      <sphere radius="0.02"/>
    </geometry>
    <material name="red">
      <color rgba=".9 0 0 1"/>
    </material>
  </visual>

 <collision>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <geometry>
      <sphere radius="0.02"/>
    </geometry>
  </collision> 
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <mass value="1"/>
    <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
  </inertial>	
</link> 

</robot>